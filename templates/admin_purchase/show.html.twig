{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ purchase.id }}</td>
            </tr>
            <tr>
                <th>Créé à</th>
                <td>{{ purchase.createdAt ? purchase.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ purchase.reference }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_purchase_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_purchase_edit', {'id': purchase.id}) }}">Modifier</a>

    {{ include('admin_purchase/_delete_form.html.twig') }}
{% endblock %}
