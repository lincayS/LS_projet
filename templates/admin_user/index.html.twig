{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class=" m-5 ">User index</h1>
<form class="form-inline my-2 my-lg-0 col-6 " method="GET">
      <input class="form-control mr-sm-2 w-25" name="search" type="search" placeholder="Nom" aria-label="Search">
      <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
    </form>   
    <table class="table col-12">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse:</th>
                <th>N°</th>
                <th>Rue</th>
                <th>Complement</th>
                <th>Code Postal</th>
                <th>Ville</th>
               
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td></td>
                <td>{{ user.addNumero }}</td>
                <td>{{ user.rue }}</td>
                <td>{{ user.complement }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.ville }}</td>
                
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}">Ouvrir</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">Le tableaux est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}">Créer un nouveau</a>
{% endblock %}
