{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
{% if cart.elements %}

<div>
    Total : {{ cart.total }}
</div>

<table>
    <tr>
        <th>Nom</th>
        <th>Quantit√©</th>
        <th>Prix</th>
        <th>Couleur</th>


    </tr>

    {% for element in cart.elements %}

    <tr>
        <td>{{ element.jeans.name }}</td>
        <td>{{ element.quantity }}</td>
        <td>{{ element.jeans.price }}</td>  
        <td>{{ element.couleur }}</td>   
         <td><img src="{{ asset('uploads/' ~ element.jeans.picture) }}" class=" w-25 " id="img" alt="jeans"></td>   

    </tr>

    {% endfor %}

</table>
{% endif %}
      <a href="{{ path('cart_clear')}}" id="btn" type="" class="btn btn-dark  "></i> Vider le panier</a>

      <a href="{{ path('payment_index')}}" id="btn" type="" class="btn btn-dark  "><i class="fas fa-cart-plus"></i> Valider le panier</a>


{% endblock %}
