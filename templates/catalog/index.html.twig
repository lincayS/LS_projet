    <div class="liens">

        <a href="{{ path('catalog_show', {'id': jeans.id}) }}">

            <img src="{{ asset('uploads/' ~ jeans.picture) }}" id="img" alt="jeans">
            <p> {{ jeans.name }}</p>

        </a> 


                  <p> {{ jeans.price }}€</p>

                    
    </div>

       
 
