{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body %}

<div class="container offset-1 ">
    <h2 class="my-5">Profil</h2>
{% if is_granted('ROLE_CLIENT') == false %}
            <hr>
            <p class=" text-danger ">Veuillez vérifier votre email pour pouvoir passer commande.</p>
        <a class=" " href=" {{path('registration_resend')}} ">Renvoyer&nbsp;le&nbsp;mail&nbsp;de&nbsp;vérification. </a>
        {% else %}
           <p class=" text-success ">Votre email est vérifié.</p>
           {% endif %}
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            
            
            <tr>
            <th colspan="4"> <h4>Adresse:</h4> </th>
            </tr>
            <tr>
                <th>N°</th>
                <td>{{ user.addNumero }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ user.rue }}</td>
            </tr>
            <tr>
                <th>Complément</th>
                <td>{{ user.complement }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ user.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.ville }}</td>
            </tr>
            <tr>
            <th colspan="4"> <h4>Mensurations:</h4> </th>
            </tr>
            <tr>
                <th>Hanches</th>
                <td>{{ user.hanches }}</td>
            </tr>
            <tr>
                <th>Bassin</th>
                <td>{{ user.bassin }}</td>
            </tr>
            <tr>
                <th>Cuisses</th>
                <td>{{ user.cuisses }}</td>
            </tr>
            <tr>
                <th>Jambes</th>
                <td>{{ user.jambes }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('profile_edit', {'id': user.id}) }}" class="linkz">Modifier</a>
</div>
{% endblock %}
